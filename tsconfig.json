{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "ESNext", "DOM"
    ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types/**"
    ]
  },
  "include": [
    "src/components/index.tsx",
    "node_modules/@types/**"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
